<% layout('layout') %>

<script>
    function sign_up_redirect() {
        location.href = "/SIGN_UP";
        return true;
    }
</script>

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">Login</h4>
    </div>

    <form method="post" action="/LOGIN?url=<%= url %>">
        <div class="modal-body">
            <fieldset>
                <div class="form-group">
                    <label>E-mail</label>
                    <input input type="email" class="form-control" name="username" id="user" placeholder="Email"
                           maxlength="64">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                           maxlength="16">
                </div>
            </fieldset>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" style="background-color: #000080">Login</button>
            <button type="button" onclick="sign_up_redirect()" class="btn btn-primary"
                    style="background-color: #000080">Sign
                Up
            </button>
        </div>
    </form>
</div>